<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10.0" prefHeight="700" prefWidth="1500" stylesheets="@styles.css" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" prefWidth="300" />
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" prefWidth="500" />
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" prefWidth="500" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="ALWAYS" />
        <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="ALWAYS" />
        <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="ALWAYS" />
        <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="ALWAYS" />
        <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="ALWAYS" />
        <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="ALWAYS" />
        <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="ALWAYS" />
    </rowConstraints>
    <children>

        <!--Input data elements-->
        <GridPane alignment="CENTER" hgap="10.0" GridPane.rowIndex="0">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" />
                <ColumnConstraints halignment="CENTER" />
                <ColumnConstraints halignment="CENTER" />
                <ColumnConstraints halignment="CENTER" />
                <ColumnConstraints halignment="CENTER" />
                <ColumnConstraints halignment="CENTER" />
                <ColumnConstraints halignment="CENTER" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30.0" valignment="BOTTOM" />
                <RowConstraints prefHeight="40.0" valignment="CENTER" />
                <RowConstraints prefHeight="40.0" valignment="CENTER" />
                <RowConstraints prefHeight="40.0" valignment="CENTER" />
                <RowConstraints prefHeight="40.0" valignment="CENTER" />
                <RowConstraints prefHeight="40.0" valignment="CENTER" />
                <RowConstraints prefHeight="40.0" valignment="CENTER" />
            </rowConstraints>
            <children>
                <Label fx:id="titleLabel" styleClass="titleLabel" text="Parametry wejściowe" GridPane.columnIndex="0" GridPane.columnSpan="7" GridPane.rowIndex="0"/>

                <Separator prefWidth="200.0" GridPane.columnSpan="7" GridPane.rowIndex="1" />

                <!--A-point-->
                    <Label prefWidth="20" text="A" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.rowSpan="2" />

                    <!--A-point latitude (N/S)-->
                        <TextField fx:id="aLatDegTxt" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="°" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <TextField fx:id="aLatMinTxt" prefWidth="60.0" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                        <Label text="'" GridPane.columnIndex="4" GridPane.rowIndex="2" />
                        <TextField fx:id="aLatSideTxt" alignment="CENTER" editable="false" prefWidth="35.0" text="N" GridPane.columnIndex="5" GridPane.rowIndex="2" />
                        <Button fx:id="aChangeLatBtn" onMouseClicked="#aChangeLat" prefWidth="50.0" text="N/S" GridPane.columnIndex="6" GridPane.rowIndex="2" />

                    <!--A-point longitude (E/W)-->
                        <TextField fx:id="aLongDegTxt" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="°" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                        <TextField fx:id="aLongMinTxt" prefWidth="60.0" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                        <Label text="'" GridPane.columnIndex="4" GridPane.rowIndex="3" />
                        <TextField fx:id="aLongSideTxt" alignment="CENTER" editable="false" prefWidth="35.0" text="E" GridPane.columnIndex="5" GridPane.rowIndex="3" />
                        <Button fx:id="aChangeLongBtn" onMouseClicked="#aChangeLong" prefWidth="50.0" text="E/W" GridPane.columnIndex="6" GridPane.rowIndex="3" />

                <Separator prefWidth="200.0" GridPane.columnSpan="7" GridPane.rowIndex="4" />

                <!--B-point-->
                    <Label prefWidth="20" text="B" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.rowSpan="2" />

                    <!--B-point latitude (N/S)-->
                        <TextField fx:id="bLatDegTxt" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <Label text="°" GridPane.columnIndex="2" GridPane.rowIndex="5" />
                        <TextField fx:id="bLatMinTxt" prefWidth="60.0" GridPane.columnIndex="3" GridPane.rowIndex="5" />
                        <Label text="'" GridPane.columnIndex="4" GridPane.rowIndex="5" />
                        <TextField fx:id="bLatSideTxt" alignment="CENTER" editable="false" prefWidth="35.0" text="N" GridPane.columnIndex="5" GridPane.rowIndex="5" />
                        <Button fx:id="bChangeLatBtn" onMouseClicked="#bChangeLat" prefWidth="50.0" text="N/S" GridPane.columnIndex="6" GridPane.rowIndex="5" />

                    <!--B-point longitude (E/W)-->
                        <TextField fx:id="bLongDegTxt" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        <Label text="°" GridPane.columnIndex="2" GridPane.rowIndex="6" />
                        <TextField fx:id="bLongMinTxt" prefWidth="60.0" GridPane.columnIndex="3" GridPane.rowIndex="6" />
                        <Label text="'" GridPane.columnIndex="4" GridPane.rowIndex="6" />
                        <TextField fx:id="bLongSideTxt" alignment="CENTER" editable="false" prefWidth="35.0" text="E" GridPane.columnIndex="5" GridPane.rowIndex="6" />
                        <Button fx:id="bChangeLongBtn" onMouseClicked="#bChangeLong" prefWidth="50.0" text="E/W" GridPane.columnIndex="6" GridPane.rowIndex="6" />

            </children>
        </GridPane>

        <!--Action buttons-->
        <GridPane alignment="CENTER" hgap="10.0" vgap="10.0" GridPane.rowIndex="2">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" />
                <ColumnConstraints halignment="CENTER" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints valignment="CENTER" />
            <RowConstraints />
            </rowConstraints>
            <children>
                <Button fx:id="clearBtn" onMouseClicked="#clearParameters" styleClass="bigButtonHalf" text="Wyczyść/Info" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ChoiceBox fx:id="languageCb" onMouseClicked="#changeLanguage" styleClass="languageChoiceBox" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                <Button fx:id="calculateBtn" onMouseClicked="#calculationProcedure" styleClass="bigButton" text="Oblicz" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="2" />
            </children>
        </GridPane>

        <!--General cases part-->
        <GridPane alignment="CENTER" hgap="10.0" vgap="10.0" GridPane.rowIndex="4">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" />
                <ColumnConstraints halignment="CENTER" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30.0" valignment="BOTTOM" />
                <RowConstraints prefHeight="60.0" valignment="CENTER" />
                <RowConstraints prefHeight="60.0" valignment="CENTER" />
                <RowConstraints prefHeight="60.0" valignment="CENTER" />
            </rowConstraints>
            <children>
                <Label fx:id="generalCasesLabel" styleClass="titleLabel" text="Przypadki ogólne" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER" />
                <Button onMouseClicked="#generalCase01" styleClass="caseButton" text="A(10°N;050°E)&#10;B(20°N;170°E)" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Button onMouseClicked="#generalCase02" styleClass="caseButton" text="A(50°N;020°W)&#10;B(50°N;090°E)" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button onMouseClicked="#generalCase03" styleClass="caseButton" text="A(50°N;030°E)&#10;B(30°N;060°E)" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Button onMouseClicked="#generalCase04" styleClass="caseButton" text="A(50°N;170°W)&#10;B(10°S;100°W)" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button onMouseClicked="#generalCase05" styleClass="caseButton" text="A(30°S;060°E)&#10;B(40°S;140°E)" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <Button onMouseClicked="#generalCase06" styleClass="caseButton" text="A(20°S;100°W)&#10;B(30°N;160°W)" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
        </GridPane>

        <Separator GridPane.rowIndex="5" />
        <Separator GridPane.rowIndex="3" />

        <!--Special cases part-->
        <GridPane alignment="CENTER" hgap="10.0" vgap="10.0" GridPane.rowIndex="6">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" />
                <ColumnConstraints halignment="CENTER" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30.0" valignment="BOTTOM" />
                <RowConstraints prefHeight="60.0" valignment="CENTER" />
                <RowConstraints prefHeight="60.0" valignment="CENTER" />
            </rowConstraints>
            <children>
                <Label fx:id="specialCasesLabel" styleClass="titleLabel" text="Przypadki szczególne" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER" />
                <Button onMouseClicked="#specialCase01" styleClass="caseButton" text="A(90°N      )&#10;B(90°S      )" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Button onMouseClicked="#specialCase02" styleClass="caseButton" text="A(40°N;030°E)&#10;B(40°S;150°W)" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button onMouseClicked="#specialCase03" styleClass="caseButton" text="A(20°N;030°E)&#10;B(40°S;030°E)" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Button onMouseClicked="#specialCase04" styleClass="caseButton" text="A( 0° ;010°E)&#10;B( 0° ;050°W)" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>

        <Label fx:id="bottomInfoLabel" styleClass="smallLabel" text="kalkulator ortodromy v1.0" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        <Label styleClass="smallLabel" text="Piotr Choczyński (piotr@choczynski.pl)" GridPane.columnIndex="2" GridPane.rowIndex="7" />

        <!--Text Areas-->
        <TextArea fx:id="primaryTextArea" editable="false" styleClass="bigTextArea" GridPane.columnIndex="1" GridPane.rowSpan="7" />
        <TextArea fx:id="secondaryTextArea" editable="false" styleClass="bigTextArea" GridPane.columnIndex="2" GridPane.rowSpan="7" />

    </children>
</GridPane>
